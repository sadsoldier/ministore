
<div class="container">

    <div class="row justify-content-center">
        <div class="col-10 col-sm-12 col-md-10 mt-sm-3">

            <div class="row">
                <div class="col">
                    <a class="btn btn-primary btn-sm ml-auto float-right mb-3 d-inline-block" href="<%= record_update_path  %>">
                        <%= icon 'fas', 'sync' %>
                    </a>
                    <h5 class="mb-3"><b>Records</b></h5>
                </div>
            </div>

            <form method="get" action="<%= record_index_path %>">

                <div class="form-row w-75 mb-2">

                    <div class="col">
                        <input type="text" class="form-control form-control-sm" placeholder="Date" name="timestamp" value="<%= @search_timestamp %>">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control form-control-sm" placeholder="Source" name="source"  value="<%= @search_source %>">
                    </div>
                    <div class="col">
                        <input type="text" class="form-control form-control-sm" placeholder="Destination" name="destination"  value="<%= @search_destination %>">
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-sm btn-primary"><%= icon 'fas', 'search' %></button>
                    </div>
                </div>

            </form>


            <table class="table table-striped table-hover table-sm">

                <thead class="thead-light">
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">timestamp</th>
                        <th scope="col">source</th>
                        <th scope="col">dest</th>
                        <th scope="col">len</th>
                        <th scope="col">down</th>

                    </tr>
                </thead>

                <tbody>

                    <% i = @pagy_nav.offset %>
                    <% records = Record.all %>
                    <% @records.each do |item| %>
                        <% i += 1 %>
                    <tr>
                        <td><%= i %></td>

                        <td>
                            <%= item.timestamp %>
                        </td>
                        <td>
                            <%= item.source %>
                        </td>

                        <td>
                            <%= item.destination %>
                        </td>

                        <td>
                            <%= (item.size/16384).to_i %>
                        </td>

                        <td>
                            <a href="<%= record_download_path %>?id=<%= item.id %>" target="_blank"><%= icon 'fas', 'file-download' %></a>
                        </td>
                    </tr>
                    <% end %>
                </tbody>

            </table>
            <%== pagy_bootstrap_nav @pagy_nav %>

        </div>
    </div>


</div>