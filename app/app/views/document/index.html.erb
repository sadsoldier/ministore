<div class="container">

    <div class="container mb-3">
        <div class="row justify-content-center">
            <div class=" col-8 col-sm-6 col-md-4 border p-4 mt-sm-5 ml-3 mr-3">


                <form enctype="multipart/form-data" action="<%= document_upload_path %>" accept-charset="UTF-8" method="post">

                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Name</span>
                        </div>
                        <input type="text" class="form-control" placeholder="name" name="name">
                    </div>

                    <div class="input-group mb-2">

                        <div class="input-group-prepend">
                            <label class="btn btn-primary">
                                <i class="fas fa-folder fa-lg"></i>
                                <input type="file" hidden class="form-control" name="file" id="file">
                            </label>
                        </div>
                        <span class="form-control" id="file-label"></span>

                    </div>

                    <button class="btn btn-primary" type="submit">
                        Send
                    </button>


                </form>
                <script>
                    $('#file').on('change', function() {
                        var fileName = $(this).val().split('\\').pop();
                        console.log("name: " + fileName);
                        $('#file-label').html(fileName);
                    })
                </script>


            </div>
        </div>
    </div>


    <table class="table table-striped table-hover table-sm">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">app_id</th>
                <th scope="col">doc_id</th>
                <th scope="col">ts</th>
                <th scope="col"></th>

            </tr>
        </thead>

        <tbody>
            <% @documents.each do |item| %>
            <tr>
                <td>
                    <%= item.id %>
                </td>

                <td>
                    <%= item.app_id %>
                </td>

                <td>
                    <%= item.document_id %>
                </td>

                <td>
                    <%= item.created_at %>
                </td>

                <td>
                    <!-- %= item.file.blob.to_json %-->
                    <!-- %= link_to 'download', rails_blob_path(item.file) %-->
                    <!-- %= link_to 'down', url_for(item.file) % -->
                </td>

            </tr>
            <% end %>
        </tbody>

    </table>

            <%== pagy_bootstrap_nav @pagy %>

</div>
