

<div class="modal fade" id="user-create" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <form method="post" action="<%= user_create_path %>">

                <div class="modal-header">
                    <h5 class="modal-title">Create user</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" name="name" id="name">
                    </div>

                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" class="form-control" name="username" id="username">
                    </div>

                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" name="password" id="password">
                    </div>

                    <div class="form-check">
                        <input type="checkbox" name="is_admin" id="is_admin" />
                        <label class="form-check-label" for="is_admin"> As admin</label>
                    </div>

                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 col-sm-12 col-md-8 mt-sm-3">

            <% if flash[:alert] %>
                <div class="alert alert-danger" role="alert">

                    <h5>Alert</h5>
                    <ol>
                        <% flash[:alert].each do |item| %>
                            <li><%= item %></li>
                        <% end %>
                    </ol> 
                </div>
            <% end %>

            <% if flash[:notice] %>
                <div class="alert alert-success" role="alert">
                    <%= flash[:notice] %>
                </div>
            <% end %>

            <div class="row">
                <div class="col">
                    <div class="btn btn-primary btn-sm ml-auto float-right mb-3 d-inline-block" data-toggle="modal" data-target="#user-create">
                        <%= icon 'fas', 'plus' %>
                    </div>
                    <h5 class="mb-3"><b>Users</b></h5>
                </div>
            </div>

            <table class="table table-striped table-hover table-sm">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">name</th>
                        <th scope="col">login</th>
                        <th scope="col">upd</th>
                        <th scope="col">del</th>
                    </tr>
                </thead>

                <tbody>
                    <% i = @pagy.offset %>
                    <% @users.each do |u| %>
                    <tr>
                        <td>
                            <%= i += 1 %>
                        </td>
                        <td>
                            <% if u.is_admin %>
                            <%= icon 'fas', 'star', class: 'fa-star' %>
                            <% end %>
                            <%= u.name %>
                        </td>
                        <td>
                            <%= u.username %>
                        </td>

                        <td>

                            <div class="modal fade" id="user-update-<%= u.id %>" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">

                                        <form method="post" action="<%= user_update_path %>">

                                            <div class="modal-header">
                                                <h5 class="modal-title">Update user <%= u.username %></h5>
                                                <button type="button" class="close" data-dismiss="modal">
                                                    <span>&times;</span>
                                                </button>
                                            </div>

                                            <div class="modal-body">

                                                <input type="hidden" name="id" value="<%= u.id %>" />

                                                <div class="form-group">
                                                    <label for="name">Name:</label>
                                                    <input type="text" class="form-control" name="name" id="name" value="<%= u.name %>">
                                                </div>

                                                <div class="form-group">
                                                    <label for="username">Username:</label>
                                                    <input type="text" class="form-control" name="username" id="username" value="<%= u.username %>">
                                                </div>

                                                <div class="form-group">
                                                    <label for="password">Password:</label>
                                                    <input type="password" class="form-control" name="password" id="password" value="<%= u.password %>">
                                                </div>

                                                <div class="form-check">
                                                    <input type="checkbox" name="is_admin" id="is_admin" />
                                                    <label class="form-check-label" for="is_admin"> As admin</label>
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-sm btn-primary">Send</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="btn btn-sm btn-light" data-toggle="modal" data-target="#user-update-<%= u.id %>">
                                <%= icon 'far', 'edit' %>
                            </div>

                        </td>

                        <td>
                            <div class="modal fade" id="user-drop-<%= u.id %>" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">

                                        <form method="post" action="<%= user_drop_path %>">

                                            <div class="modal-header">
                                                <h5 class="modal-title">Drop user <%= u.username %></h5>
                                                <button type="button" class="close" data-dismiss="modal">
                                                    <span>&times;</span>
                                                </button>
                                            </div>

                                            <div class="modal-body">

                                                <input type="hidden" name="id" value="<%= u.id %>" />

                                                <div class="form-check">
                                                    <%= check_box_tag :confirmation %>
                                                    <label class="form-check-label" for="confirmation"> I agree to this action</label>
                                                </div>

                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-sm btn-primary">Drop</button>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>

                            <div class="btn btn-sm btn-light" data-toggle="modal" data-target="#user-drop-<%= u.id %>">
                                <%= icon 'far', 'trash-alt' %>
                            </div>

                        </td>

                    </tr>
                    <% end %>
                </tbody>

            </table>

            <%== pagy_bootstrap_nav @pagy %>

        </div>
    </div>
</div>