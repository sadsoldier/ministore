<!doctype html>
<html class="no-js" lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>R2 Login</title>

    <%= stylesheet_pack_tag 'application', media: 'all' %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

</head>

<body>

    <div>
        <nav class="navbar navbar-expand-sm sticky-top navbar-dark bg-dark mb-4">
            <span class="navbar-text ml-3">
                <i class="fab fa-old-republic fa-lg"></i>
                <%= t 'login' %>
            </span>

            <ul class="nav justify-content-end ml-auto">

                <% locale = I18n.locale %>
                <% I18n.available_locales.each do |locale| %>
                    <li class="nav-item">
                        <% I18n.locale = locale  %>
                        <%= link_to t(locale), login_path, class: "nav-link" %>

                    </li>
                <% end %>
                <% I18n.locale = locale %>

                <li lass="nav-item">
                    <%= link_to t('go_home'), root_path, class: "nav-link" %>
                </li>


            </ul>
        </nav>

        <div class="container">
            <div class="row justify-content-center">
                <div class=" col-8 col-sm-6 col-md-4 border p-4 mt-sm-5 ml-3 mr-3">

                    <form action="<%= auth_path %>" accept-charset="UTF-8" method="post">

                        <div class=" form-group">
                            <label for="username"><%= t 'username' %></label>
                            <input type="text" name="username" id="username" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="password"><%= t 'password' %></label>
                            <input type="password" name="password" id="password" class="form-control" />
                        </div>

                        <div class="text-center">
                            <button name="button" type="submit" class="btn btn-primary btn-sm"><%= t 'submit' %></button>
                        </div>

                    </form>

                </div>
            </div>
        </div>

        <% if flash[:alert] %>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-8 col-sm-8 col-md-6 mt-sm-3">
                        <div class="text-center ">
                            <span class="text-danger"><b><%= flash[:alert] %></b></span>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>

        <div class="container">
            <div class="row">
                <div class="col mt-5">
                    <hr class="justify-content-sm-center" />
                    <div class="text-center">
                        <small><%= t 'made_by' %> <a href="http://wiki.unix7.org"><%= t 'borodin_oleg' %></a></small>
                    </div>
                </div>
            </div>
        </div>

    <%= javascript_pack_tag "application" %>

</body>

</html>